include ../global/util.pug

mixin guideMenu()
  nav#guide-menu()&attributes({'opened': ''})
    +guideSection(
      [
        {href:'/',  string: '홈', imgSrc:'home.svg'},
        {href:'/trend', string:'인기', imgSrc:'trend.svg'},
        {href:'/subscription', string:'구독', imgSrc:'subscription.svg'}
      ]
    )
    +guideSection(
      [
        {href:'/library', string:'보관함', imgSrc: 'library.svg'},
        {href:'/history', string:'시청 기록', imgSrc: 'view-record.svg'},
        {href:'/studio', string:'내 동영상', imgSrc: 'personal.svg'},
        {href:'/playlist', string:'나중에 볼 동영상', imgSrc:'watch-later.svg'}
