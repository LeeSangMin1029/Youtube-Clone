mixin navbar()
  #navbar
    #left
      #menu
        +buttonBox("header_menu.png", "메뉴 버튼")
      #logo-container
        a(href="/" title="JJabtube 홈")
          #logo
            img(src="static/images/youtube_logo.svg" width="80" height="24" alt="유튜브 로고")
    #center
      #search-container
        form#search-form(action="/results")
          #search-input
            label(for="search" hidden)
            input(id="search" type="text" name="search" placeholder="검색" autocomplete="off")
    #right
      #buttons
        +buttonBox("video_camera.png", "동영상 업로드")
        +buttonBox("alarm.png", "동영상 알림")
        +buttonBox("user.png", "내 정보")

mixin buttonBox(imgSrc, alt)
  #button-box
    #button
      button: img(src=`static/images/${imgSrc}` width="24" height="24" alt=alt)
    #ripple